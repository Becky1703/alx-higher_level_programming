    if operator == "+":
        result = int(a + b)
        print("{} + {} = {}".format(a, b, result))
    elif operator == "-":
        result = int(a - b)
        print("{} - {} = {}".format(a, b, result))
    elif operator == "*":
        result = int(a * b)
        print("{} * {} = {}".format(a, b, result))
    elif operator == "/":
        result = int(a/b)
        print("{} / {} = {}".format(a, b, result))
    else:
        print("Unknown operator. Available operators: +, -, * and /")
